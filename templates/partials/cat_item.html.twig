

    {% set header_image = page.header.header_image|defined(true) %}
    {% set header_image_width  = page.header.header_image_width|defined(300) %}
    {% set header_image_height = page.header.header_image_height|defined(300) %}
    {% set header_image_file = page.header.header_image_file %}

  <div class="list-item h-entry oz-filteritem" {% if theme_var('header.kundencode') == 'immosit' %}data-clickme="{{ page.url }}"{% endif %}>
      {% if header_image %}
          {% if header_image_file %}
              {% set header_image_media = page.media.images[header_image_file] %}
          {% else %}
              {% set header_image_media = page.media.images|first %}
          {% endif %}
          {{ header_image_media.cropZoom(header_image_width, header_image_height).html|raw }}
      {% endif %}
      <div class="list-blog-header">
      {% if theme_var('header.kundencode') == 'immosit' %}
        <a href="{{ page.url }}" class="filterbutton u-url">{{ page.title }}</a>
        <div class="oz-filtericons">
              {% for tag in page.taxonomy.nichtraucher %}
              {% if tag == 'ja' %}
              <i class="svgitem smoking norm"></i>
              {% endif %}
              {% endfor %}
              {% for tag in page.taxonomy.wlan %}
              {% if tag == 'ja' %}
              <i class="svgitem wlan norm"></i>
              {% endif %}
              {% endfor %}
              {% for tag in page.taxonomy.haustiere %}
              {% if tag == 'ja' %}
              <i class="svgitem paw norm"></i>
              {% endif %}
              {% endfor %}
              {% for tag in page.taxonomy.zentrumsnah %}
              {% if tag == 'ja' %}
              <i class="svgitem ortsmarker norm"></i>
              {% endif %}
              {% endfor %}
              {% for tag in page.taxonomy.parking %}
              {% if tag == 'ja' %}
              <i class="svgitem parking norm"></i>
              {% endif %}
              {% endfor %}
        </div>
      {% else %}


          {#
          <span class="list-blog-date">
              <time class="dt-published" datetime="{{ page.date|date("c") }}">
                  <span>{{ page.date|date("d") }}</span>
                  <em>{{ page.date|date("M") }}</em>
              </time>
          </span>
          #}
          {% if page.header.link %}
              <h4 class="p-name">
                  {% if page.header.continue_link is not same as(false) %}
                  <a href="{{ page.url }}"><i class="fa fa-angle-double-right u-url"></i></a>
                  {% endif %}
                  <a href="{{ page.header.link }}" class="u-url">{{ page.title }}</a>
              </h4>
          {% else %}
              <h4 class="p-name"><a href="{{ page.url }}" class="u-url">{{ page.title }}</a></h4>
          {% endif %}

          {% if page.taxonomy.tag %}
          <span class="tags">
              {% for tag in page.taxonomy.tag %}
              <a href="{{ blog.url|rtrim('/') }}/tag{{ config.system.param_sep }}{{ tag }}" class="p-category">{{ tag }}</a>
              {% endfor %}
          </span>
          {% endif %}
          {% if page.taxonomy.author %}
          <span class="tags">
              {% for author in page.taxonomy.author %}
              <a href="{{ blog.url|rtrim('/') }}/tag{{ config.system.param_sep }}{{ author }}" class="p-category">{{ author }}</a>
              {% endfor %}
          </span>
          {% endif %}
      {% endif %}
      </div>
      {% if theme_var('header.kundencode') != 'immosit' %}

      <div class="list-blog-padding">

      {% if page.header.continue_link is same as(false) %}
          <div class="e-content">
              {{ page.content|raw }}
          </div>
          {% if not truncate %}
          {% set show_prev_next = true %}
          {% endif %}
      {% elseif truncate and page.summary != page.content %}
          <div class="p-summary e-content">
              {{ page.summary|raw }}
              <p><a href="{{ page.url }}">{{ 'THEME_AKAZIEWOOD.THEME.BLOG.CONTINUE_READING'|t }}</a></p>
          </div>
      {% elseif truncate %}
          <div class="p-summary e-content">
              {{ page.content|raw }}
              <p><a href="{{ page.url }}">{{ 'THEME_AKAZIEWOOD.THEME.BLOG.CONTINUE_READING'|t }}</a></p>
          </div>
      {% else %}
          <div class="e-content">
              {{ page.content|raw }}
          </div>

          {% if config.plugins.comments.enabled %}
              {% include 'partials/comments.html.twig' %}
          {% endif %}

          {% set show_prev_next = true %}
      {% endif %}

      {% if show_prev_next %}

          <p class="prev-next">
              {% if not page.isFirst %}
                  <a class="button" href="{{ page.nextSibling.url }}"><i class="fa fa-chevron-left"></i> {{ 'BLOG.ITEM.NEXT_POST'|t }}</a>
              {% endif %}

              {% if not page.isLast %}
                  <a class="button" href="{{ page.prevSibling.url }}">{{ 'BLOG.ITEM.PREV_POST'|t }} <i class="fa fa-chevron-right"></i></a>
              {% endif %}
          </p>
      {% endif %}

      </div>
      {% endif %}

  </div>
