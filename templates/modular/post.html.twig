

{% if theme_var('header.blogimgpos') == 1 %}


<article class="modular section-text col-12 {% if page.header.column == 1 %}col-md-3{% else %}col-md-6{% endif %}">
<h2>{{ page.header.title }}</h2>

   <div class="markdown">
        {{ page.content | markdown }}
    </div>


    {% if page.header.button is defined %}
      <div class="imgbuttons">
        {% if page.header.button | length < 5 and page.header.button | length > 1 %}
          <div class="row">
            {% for button in page.header.button %}
              <div class="col-12 col-md-{{ 12 / page.header.button | length }}">
                <a class="button" href="{{ button.url }}" {% if button.newtab == 1 %}target="_blank"{% endif %}>{{ button.title }}</a>
              </div>
            {% endfor %}
          </div>
        {% else %}
          {% for button in page.header.button %}
            <a class="button" href="{{ button.url }}" {% if button.newtab == 1 %}target="_blank"{% endif %}>{{ button.title }}</a>
          {% endfor %}
        {% endif %}
      </div>
    {% endif %}


</article>

{% endif %}


<article class="modular section-image col-12 {% if page.header.column == 1 %}col-md-3{% else %}col-md-6{% endif %}">

{#
  <h3 class="heading">{{ page.header.title }}</h3>
#}

    {% set image = page.media | first %}

    {% if theme_var('header.blogscale') == 1 %}
        {% set resize = 3 / 4 %}
    {% elseif theme_var('header.blogscale') == 2 %}
        {% set resize = 9 / 16 %}
    {% elseif theme_var('header.blogscale') == 3 %}
        {% set resize = 1 / 2.35 %}
    {% elseif theme_var('header.blogscale') == 4 %}
        {% set resize = 1 %}
    {% elseif theme_var('header.blogscale') == 5 %}
        {% set resize = 4 / 3 %}
    {% endif %}

  <div class="media-container {% if page.header.showtitle == 2 %}title-placeholder{% endif %}{% if page.header.column == 3 %} centermark{% endif %}" {% if page.header.marginright is defined %}data-padding="{{ page.header.marginright }}"{% endif %}>


{% if theme_var('header.imagesizing') == 1 %}
    {% if page.header.column == 2 or page.header.column == 3  %}
            <picture>
            <source media="(min-width:992px)" srcset="{{ image.cropZoom(1250,1250 * resize).url }} 1x, {{ image.cropZoom(2500,2500 * resize).url }} 2x">
            <source media="(min-width:870px)" srcset="{{ image.cropZoom(840,840 * resize).url }} 1x, {{ image.cropZoom(1680,1680 * resize).url }} 2x">
            <source media="(min-width:500px)" srcset="{{ image.cropZoom(510,510 * resize).url }} 1x, {{ image.cropZoom(1020,1020 * resize).url }} 2x">
              <source media="(max-width:499px)" srcset="{{ image.cropZoom(450,450 * resize).url }} 1x, {{ image.cropZoom(900,900 * resize).url }} 2x">
              <img class="media" style="width:100%;" title="{{ page.header.title }}" alt="{{ page.header.alt }}" src="{{ image.cropZoom(1280,1280 * resize).url }}" />
            </picture>
    {% else %}
            <picture>
              <source media="(min-width:1220px)" srcset="{{ image.cropZoom(610,610 * resize).url }} 1x, {{ image.cropZoom(900,900 * resize).url }} 2x">
              <source media="(min-width:992px)" srcset="{{ image.cropZoom(450,450 * resize).url }} 1x, {{ image.cropZoom(800,800 * resize).url }} 2x">
              <source media="(min-width:500px)" srcset="{{ image.cropZoom(510,510 * resize).url }} 1x, {{ image.cropZoom(900,900 * resize).url }} 2x">
              <source media="(max-width:499px)" srcset="{{ image.cropZoom(450,450 * resize).url }} 1x, {{ image.cropZoom(900,900 * resize).url }} 2x">
              <img class="media" style="width:100%;" title="{{ page.header.title }}" alt="{{ page.header.alt }}" src="{{ image.cropZoom(1280,1280 * resize).url }}" />
            </picture>
    {% endif %}
{% else %}
<img class="media" title="{{ page.header.title }}" alt="{{ page.header.alt }}" src="{{ image.cropZoom(1280,1280 * resize).url }}" />

{% endif %}

    </div>


</article>



