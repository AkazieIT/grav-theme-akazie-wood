<article class="modular section-youtube col-12 {% if page.header.column == 2 %}col-md-12{% else %}col-md-6{% endif %}">
    {% if page.header.icon %}<span class="heading-icon"><i class="fas fa-{{ page.header.icon }}"></i></span>{% endif %}
    {% if page.header.showtitle == 1 %}<h2 class="heading">{{ page.header.title }}</h2>{% endif %}
    <div class="markdown {% if page.header.showtitle == 2 %}title-placeholder{% endif %}">
        <iframe class="youtube-iframe" width="100%"
                src="https://www.youtube.com/embed/{{ page.header.youtube }}"
                frameborder="0"
                allow="accelerometer; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen>
        </iframe>
    </div>
</article>

